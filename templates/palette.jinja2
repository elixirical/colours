<!DOCTYPE html>
{% if data[0] == False %}
    <title>colour palette generator</title>
{% else %}
    <title>colour palette for {{ data[0] }}</title>
{% endif %}
<link rel="stylesheet" href="./static/css/palette.css">
<link rel="shortcut icon" href="./static/favicon.ico">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Belanosima">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins">

<body style="font-family: 'Poppins', sans-serif;">
    <form method="post" action="/">

        {% if data[0] == False %}
            <input name="text" placeholder="your name here">
        {% else %}
            <input name="text" value="{{ data[0] }}" autofocus="autofocus">
        {% endif %}

        {% if radio == 'old' %}
            <input type="radio" id="oldRadio" name="palette_type" value="old" checked>RGB generator</input>
            <input type="radio" id="altRadio" name="palette_type" value="alt">HSL generator</input>
        {% elif radio == 'alt' %}
            <input type="radio" id="oldRadio" name="palette_type" value="old">RGB generator</input>
            <input type="radio" id="altRadio" name="palette_type" value="alt" checked>HSL generator</input>
        {% endif %}

        {% if check == 0 %}
            <input type="checkbox" id="genCheck" name="gen_type" value="unified">more unified palette?</input>
        {% elif check == 1 %}
            <input type="checkbox" id="genCheck" name="gen_type" value="unified" checked>more unified palette?</input>
        {% endif %}

        <input type="submit" value="submit">

    </form>

    <div class="everything">
    {% if data[0] == False %}
        <div class="title" style="font-family: 'Belanosima', sans-serif;">
            <h1>generate a colour palette for your name!</h1>
        </div>
    {% else %}   
        <div class="title" style="font-family: 'Belanosima', sans-serif;">
            <div><h1> colour palette for {{ data[0] }} </h1></div>
        </div>
    {% endif %}
        <div class="main" {{ "style='color: #1f1f1f;'" if data[0] == False else "style='color: #FFFFFF;'" }}>
            <div class="colours">
                <span style="background-color: {{data[1][0]}};">{{data[1][0]}}</span>
                <span style="background-color: {{data[1][1]}};">{{data[1][1]}}</span>
                <span style="background-color: {{data[1][2]}};">{{data[1][2]}}</span>
                <span style="background-color: {{data[1][3]}};">{{data[1][3]}}</span>
            </div>
            <div class="colours">
                <span style="background-color: {{data[1][4]}};">{{data[1][4]}}</span>
                <span style="background-color: {{data[1][5]}};">{{data[1][5]}}</span>
                <span style="background-color: {{data[1][6]}};">{{data[1][6]}}</span>
                <span style="background-color: {{data[1][7]}};">{{data[1][7]}}</span>
            </div>
            <div class="colours">
                <span style="background-color: {{data[1][8]}};">{{data[1][8]}}</span>
                <span style="background-color: {{data[1][9]}};">{{data[1][9]}}</span>
                <span style="background-color: {{data[1][10]}};">{{data[1][10]}}</span>
                <span style="background-color: {{data[1][11]}};">{{data[1][11]}}</span>
            </div>
            <div class="colours">
                <span style="background-color: {{data[1][12]}};">{{data[1][12]}}</span>
                <span style="background-color: {{data[1][13]}};">{{data[1][13]}}</span>
                <span style="background-color: {{data[1][14]}};">{{data[1][14]}}</span>
                <span style="background-color: {{data[1][15]}};">{{data[1][15]}}</span>
            </div>
        </div>
    </div>
    <div class="github">
        some <a href="info">info</a><br>
        code on <a href="https://github.com/elixirical/colours/tree/master">github</a><br>
</body>